<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="@color/blue"
        android:orientation="vertical" >

        <Button
            android:id="@+id/help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:text="Help"
            android:textColor="#ffffff"
            android:textSize="20sp" >
        </Button>
        
        <Button
            android:id="@+id/game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:text="Change game"
            android:textColor="#ffffff"
            android:textSize="20sp" >
        </Button>
        
        <Button
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="80dp"
            android:text="Back to the score"
            android:textColor="#ffffff"
            android:textSize="20sp" >
        </Button>
    </LinearLayout>
    
	<LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:background="@color/blue"
	    android:gravity="center"
	    android:orientation="vertical" >

        <Button
            android:id="@+id/OneByOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:text="Hear one note by one"
            android:textColor="#ffffff"
            android:textSize="25sp" >
        </Button>

        <Button
            android:id="@+id/TwoByTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:text="Hear two notes by two"
            android:textColor="#ffffff"
            android:textSize="25sp" >
        </Button>
      
        <Button
            android:id="@+id/ThreeByThree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:text="Hear three notes by three"
            android:textColor="#ffffff"
            android:textSize="25sp" >
        </Button>

        <Button
            android:id="@+id/OneMeasureByOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:text="Hear one measure by one"
            android:textColor="#ffffff"
            android:textSize="25sp" >
        </Button>
    </LinearLayout>
    
</LinearLayout>